{
  "compilerOptions": {
    "baseUrl": "src",
    "lib": ["es5", "es6", "dom"],
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["./src/**/*"]
}
